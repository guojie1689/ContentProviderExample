<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_addbook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="addBook"
        android:visibility="gone"
        android:text="添加图书"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/btn_delbook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="delbook"
        android:text="删除图书"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/btn_addbook" />

    <Button
        android:id="@+id/btn_querybook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="querybook"
        android:text="查询图书"
        app:layout_constraintLeft_toRightOf="@+id/btn_delbook" />

    <Button
        android:id="@+id/btn_updatebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="updatebook"
        android:visibility="gone"
        android:text="更新图书"
        app:layout_constraintLeft_toRightOf="@+id/btn_querybook" />

    <Button
        android:id="@+id/btn_queryphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getFile"
        android:text="查询图片"
        app:layout_constraintTop_toBottomOf="@+id/btn_updatebook" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_queryphoto" />


</android.support.constraint.ConstraintLayout>